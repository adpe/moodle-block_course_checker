{{!
    @template block_course_checker/human_check_form

    This template renders the human check form

    Example context (json):
    {
        "action": "",
        "token": "abc1234",
        "dateinputhtml": "<div class=\"alert alert-info\">Here will be rendered a date selector</div>",
        "humanplaceholder": "Placeholder",
        "manualreason": "Test check"
    }
}}

<label>{{#str}}humancheck_title, block_course_checker{{/str}}</label>

<form method="post" action="{{action}}">
    {{#token}}
        <input type="hidden" name="token" value="{{token}}"/>
    {{/token}}
    <div class="m-a-0">
        <div class="hummancheck_dateinput">
            {{{dateinputhtml}}}
        </div>
        <div class="pb-3">
            <textarea class="form-control" name="human_comment" placeholder="{{humanplaceholder}}">{{manualreason}}</textarea>
        </div>
        <input class="btn btn-secondary btn-block" type="submit" placeholder="{{#str}}update,block_course_checker{{/str}}"/>
    </div>
</form>